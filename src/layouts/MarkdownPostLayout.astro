---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
const titleSize = "3em";
const pageTitle= "Ula≈ü - " + frontmatter.title
---
<BaseLayout titleSize={titleSize} pageTitle={pageTitle}>
<p>{frontmatter.author} | Published on: {frontmatter.pubDate.toLocaleDateString()}</p>
<p><em>{frontmatter.description}</em></p>
<img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />

<slot />
</BaseLayout>